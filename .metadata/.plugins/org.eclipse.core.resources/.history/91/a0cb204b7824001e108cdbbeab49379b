package com.tjoeun.springDI_xml_namespace;

public class StrudentInfo {
	
	private Student student;
	
	public StrudentInfo() {	}
	
	public StrudentInfo(Student student) {
		this.student = student;
	}

	public Student getStudent() {
		return student;
	}

	public void setStudent(Student student) {
		this.student = student;
	}

	@Override
	public String toString() {
		return "StrudentInfo [student=" + student + "]";
	}
	
	public void getStudentInfo() {
		System.out.println("이름: " + student.getName());
		System.out.println("나이: " + student.getAge());
		System.out.println("과목: " + student.getName());
		System.out.println("신장: " + student.getName());
		System.out.println("체중: " + student.getName());
	}
} 
